//DSQL mặt hàng
typedef struct mathang                //Lưu tên các mặt hàng có trong chuỗi cửa hàng và giá tiền
{
	char ten[100];
	int giatien;
	int mamh;                    
}MH;
typedef struct monhang
{
	MH Info;
	monhang *next;
};
typedef struct MHlist
{
	monhang *head;
	monhang *tail;
};
//Hàm tạo danh sách
void CreateList(MHlist &l);
//Hàm tạo 1 phần tử của danh sách
monhang *GetNode(MH a);
//Hàm phụ
void xoadau(MHlist &l);  
void xoacuoi(MHlist &l); 
void AddTail(MHlist &L, monhang *p);
void AddHead(MHlist &L, monhang *p);
//Hàm nhập, in thông tin của mỗi mặt hàng
void nhapmathang(MH &a);
void inmathang(MH a);
//Hàm nhập danh sách
void nhaplist(MHlist &l, int n);  
//Hàm đưa ra các lựa chọn việc cần làm trong danh sách
void Choices(MHlist &L, MH a[], int &n);
//Các lựa chọn công việc
void xuatlist(MHlist l); //Công việc 1
void xoatheomamh(MHlist &L, int x, MH a[], int &n);  //Công việc 2
void timtheoma(MHlist &L, int n);  //Công việc 3
void sapxeptheogiatien(MHlist &L); //Công việc 4
//DSQL tình trạng hàng
typedef struct tinhtrang
{
	int slbandau; //Số lượng ban đầu sau khi nhập
	int sl; //Số lượng hiện thời
	int mamh; //Mã mặt hàng
}TT;
typedef struct mamh
{
	TT Info;
	mamh *next;
};
typedef struct TTlist
{
	mamh *head;
	mamh *tail;
};
typedef struct bill
{
	int mamh; //Mã mặt hàng đã mua
	int soluong; //Số lượng mua của mặt hàng đó
};
//Hàm tạo danh sách
void CreateList(TTlist &l);
//Hàm tạo 1 phần tử của danh sách
mamh *GetNode(TT a);
//Hàm phụ:
void AddTail(TTlist &L, mamh *p);
void nhaptinhtrang(TT &a);
void nhaplist(TTlist &l, int n);
void intinhtrang(TT a);
void nhapbill(bill a[], int n);
void dieuchinhsoluong(bill a, TTlist &L);
//Hàm chính:
void xuatlist(TTlist l); //Công việc 1
void them(TTlist &L, TT a); //Công việc 2
void timslnhohon5(TTlist &L); //Công việc 3
void Inbill(bill a[], int n1, MHlist l1, int n, TTlist &l2); //Công việc 4, n1 là số mặt hàng khách hàng mua, n là số mặt hàng trong l1 
void main()
{
	MH a[100];
	int n, n1;
	bill b[100];
	cout << "Nhap so mat hang can quan li: ";
	cin >> n;
	MHlist L;
	TTlist L2;
	CreateList(L);
	CreateList(L2);
	nhaplist(L, n);
	cout << "Nhap tinh trang hang: ";
	nhaplist(L2, n);
	cout << "Nhap so mat hang ban can mua: ";
	cin >> n1;
	nhapbill(b, n1);
	Inbill(b, n1, L, n, L2);
	//Choices(L, a, n);
}
void nhapmathang(MH &a)
{
	cout << "Nhap ten mat hang: ";
	cin.ignore();
	cin.getline(a.ten, 9);
	cout << "Nhap gia tien: ";
	cin >> a.giatien;
	cout << "Nhap ma mat hang: ";
	cin >> a.mamh;
}
void inmathang(MH a)
{
	cout << endl;
	cout << "Ten mat hang: " << a.ten << endl;
	cout << "Ma so mat hang la: " << a.mamh << endl;
	cout << "Gia tien la: " << a.giatien << endl;
	cout << endl;
}
void CreateList(MHlist &l)
{
	l.head = l.tail = NULL;
}
void AddHead(MHlist &L, monhang *p)
{
	if (L.head == NULL)
	{
		L.head = L.tail = p;
	}
	else
	{
		p->next = L.head;
		L.head = p;
	}
}
void AddTail(MHlist &L, monhang *p)
{
	if (L.head == NULL)
	{
		L.head = L.tail = p;
	}
	else
	{
		L.tail->next = p;
		L.tail = p;
	}
}
monhang *GetNode(MH a)
{
	monhang *p = new monhang;
	if (p == NULL)
	{
		return NULL;
	}
	p->Info = a;
	p->next = NULL;
	return p;
}
void nhaplist(MHlist &l, int n)
{
	MH x[100];
	monhang *p;
	for (int i = 1; i <= n; i++)
	{
		cout << "Nhap mat hang thu " << i << " :" << endl;
		nhapmathang(x[i]);
		p = GetNode(x[i]);
		AddTail(l, p);
		cout << endl;
	}
}
