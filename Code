void xuatlist(MHlist l)
{
	monhang *p;
	p = l.head;
	while (p != NULL)
	{
		inmathang(p->Info);
		p = p->next;
	}
	delete p;
}
void xoadau(MHlist &l)
{
	if (l.head == NULL) cout << "Danh sach rong";
	else
	{
		monhang *p = l.head;
		if (l.head == l.tail) l.head = l.tail = NULL;
		else l.head = l.head->next;
		delete p;
	}
	xuatlist(l);
}
void xoacuoi(MHlist &l)
{
	if (l.head == NULL) cout << "Danh sach rong";
	else
	{
		monhang *p = l.tail;
		if (l.head == l.tail) l.head = l.tail = NULL;
		else
		{
			monhang *q;
			for (q = l.head; q->next != l.tail; q = q->next)
			{
				q->next = NULL;
				l.tail = q;
			}
			delete p;
		}
		xuatlist(l);
	}
}
void XoaNode(MHlist &l, monhang *q)
{
	monhang *p = q->next;
	if (p == NULL) cout << "Khong xoa duoc!";
	else
	{
		q->next = p->next;
		if (p == l.tail) l.tail = q;
		delete p;
	}
}
void xoatheomamh(MHlist &L, int x, MH a[], int &n)
{
	monhang *p = L.head;
	monhang *q = L.head;
	while (p != NULL)
	{
		if (p->Info.mamh == x)
		{
			if (p == L.head) xoadau(L);
			else if (p == L.tail) xoacuoi(L);
			else 
			{
				XoaNode(L, q);
				xuatlist(L);
			}
			break;
		}
		q = p;
		p = p->next;
	}
}
void timtheoma(MHlist &L, int n)
{
	monhang *p = L.head;
	while (p != NULL)
	{
		if (p->Info.mamh == n)
		{
			cin.ignore();
			inmathang(p->Info);
			break;
		}
		p = p->next;
	}
}
void sapxeptheogiatien(MHlist &l)
{
	MHlist l1, l2;
	monhang *tag, *p;
	if (l.head == l.tail) return;
	CreateList(l1);
	CreateList(l2);
	tag = l.head;
	l.head = l.head->next; 
	tag->next = NULL;
	while (l.head != NULL) 
	{
		p = l.head;
		l.head = l.head->next;
		p->next = NULL;
		if (p->Info.giatien <= tag->Info.giatien) AddHead(l1, p);
		else AddHead(l2, p);
	}
	sapxeptheogiatien(l1); 
	sapxeptheogiatien(l2);
	if (l1.head != NULL) 
	{ 
		l.head = l1.head;
		l1.tail->next = tag;
	} 
	else l.head = tag;
	tag->next = l2.head;
	if (l2.head != NULL) l.tail = l2.tail;
	else l.tail = tag;
}
void CreateList(TTlist &l)
{
	l.head = l.tail = NULL;
}
mamh *GetNode(TT a)
{
	mamh *p = new mamh;
	if (p == NULL)
	{
		return NULL;
	}
	p->Info = a;
	p->next = NULL;
	return p;
}
void AddTail(TTlist &L, mamh *p)
{
	if (L.head == NULL)
	{
		L.head = L.tail = p;
	}
	else
	{
		L.tail->next = p;
		L.tail = p;
	}
}
void nhaptinhtrang(TT &a)
{
	cout << "Nhap ma mat hang: ";
	cin >> a.mamh;
	cout << "Nhap so luong ban dau: ";
	cin >> a.slbandau;
	cout << "Nhap so luong hien con: ";
	cin >> a.sl;
}
void nhaplist(TTlist &l, int n)
{
	TT x[100];
	mamh *p;
	for (int i = 1; i <= n; i++)
	{
		cout << "Nhap mat hang thu " << i << " :" << endl;
		nhaptinhtrang(x[i]);
		p = GetNode(x[i]);
		AddTail(l, p);
		cout << endl;
	}
}
void intinhtrang(TT a)
{
	cout << endl;
	cout << "Ma mat hang: " << a.mamh << endl;
	cout << "So luong ban dau mat hang la: " << a.slbandau << endl;
	cout << "So luong hien con la: " << a.sl << endl;
	cout << endl;
}
void xuatlist(TTlist l)
{
	mamh *p;
	p = l.head;
	while (p != NULL)
	{
		intinhtrang(p->Info);
		p = p->next;
	}
	delete p;
}
void them(TTlist &L, TT a)
{
	nhaptinhtrang(a);
	mamh *p = GetNode(a);
	AddTail(L, p);
}
void timslnhohon5(TTlist &L)
{
	mamh *p;
	p = L.head;
	while (p != NULL)
	{
		if (p->Info.sl < 5)
		{
			intinhtrang(p->Info);
			cout << "Ban muon nhap them bao nhieu: ";
			int t;
			cin >> t;
			p->Info.sl = p->Info.slbandau = p->Info.sl + t;
		}
		p = p->next;
	}
	delete p;
}
void nhapbill(bill a[], int n)
{
	for (int i = 1; i <= n; i++)
	{
		cout << "Nhap mat hang " << i << ": ";
		cout << "Nhap ma mat hang: ";
		cin >> a[i].mamh;
		cout << "Nhap so luong can mua: ";
		cin >> a[i].soluong;
		cout << endl;
	}
}
int giatien(MHlist L, int n)
{
	monhang *p = L.head;
	while (p != NULL)
	{
		if (p->Info.mamh == n)
		{
			return p->Info.giatien;
			break;
		}
		p = p->next;
	}
}
void dieuchinhsoluong(bill a, TTlist &L)
{
	mamh *p = L.head;
	while (p != NULL)
	{
		if (p->Info.mamh == a.mamh)
		{
			p->Info.sl = p->Info.sl - a.soluong;
			break;
		}
		p = p->next;
	}
}
void Inbill(bill a[], int n1, MHlist l1, int n, TTlist &l2) //n1 là số mặt hàng khách hàng mua, n là số mặt hàng trong l1
{
	int S = 0;
	for (int i = 1; i <= n1; i++)
	{
		timtheoma(l1, a[i].mamh);
		cout << "So luong: " << a[i].soluong << endl;
		dieuchinhsoluong(a[i], l2);
		int t = giatien(l1, a[i].mamh);
		cout << "Thanh tien la: " << t * a[i].soluong;
		S += t * a[i].soluong;
		cout << endl;
	}
	cout << "Tong cong hoa don" << S << endl;
}
